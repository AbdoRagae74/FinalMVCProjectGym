@model InbodyViewModel
@using System.Globalization

<h3>@(Model.ID == 0 ? "Add InBody Test" : "Edit InBody Test")</h3>

<form asp-action="ManageInBody" method="post">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="TraineeID" />

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Height"></label>
        <input asp-for="Height" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Fats"></label>
        <input asp-for="Fats" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MuscleMass"></label>
        <input asp-for="MuscleMass" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success mt-2">Save</button>
</form>
