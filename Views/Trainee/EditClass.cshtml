@model TraineeClassViewModel
@{
    ViewData["Title"] = "Edit Trainee's Class";
}

<h2>Edit Assigned Class</h2>

<form asp-action="EditClass" method="post">
    <input type="hidden" asp-for="TraineeId" />

    <div class="form-group">
        <label for="SelectedClassId">Class</label>
        <select asp-for="SelectedClassId" asp-items="@(new SelectList(Model.AvailableClasses, "ID", "Name"))" class="form-control">
            <option value="">-- Select Class --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
